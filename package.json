{
  "name": "claudes-party",
  "version": "1.0.0",
  "description": "Desktop app for monitoring Claude Code sessions with voice and SMS support",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "tsc && npm run copy-static",
    "copy-static": "node scripts/copy-static.js",
    "watch": "tsc -w",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.claudes-party.app",
    "productName": "Claude's Party",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "keywords": [
    "claude",
    "ai",
    "monitor",
    "voice",
    "sms"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.31.0",
    "electron-store": "^8.1.0",
    "twilio": "^5.11.2",
    "ws": "^8.14.0"
  }
}
